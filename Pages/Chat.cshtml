@page
@model FabricWebApp.Pages.ChatModel

<div class="chat-box" style="max-height:500px; overflow-y:scroll; border:1px solid #ccc; padding:10px;">
    @foreach (var message in Model.ChatHistory)
    {
        <div style="margin-bottom:10px;">
            <strong>@message.Role:</strong> @message.Content
        </div>
    }
</div>

<form method="post">
    <input type="text" name="UserMessage" class="form-control" placeholder="Type your message..." autocomplete="off" />
    <button type="submit" class="btn btn-primary mt-2">Send</button>
</form>