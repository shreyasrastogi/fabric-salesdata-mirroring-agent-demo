<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Fabric Web App</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="d-flex">
        <!-- ✅ Sidebar -->
        <div class="bg-light border-end" style="width: 220px; height: 100vh; position: fixed;">
            <h5 class="p-3">Fabric App</h5>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-page="/Index">🏠 Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-page="/ShowData">📊 Show Data</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-page="/Chat">🤖 Agent Chat</a>
                </li>
            </ul>
        </div>

        <!-- ✅ Main Content -->
        <div style="margin-left: 220px; width: 100%; padding: 20px;">
            <main role="main" class="pb-3">
                @RenderBody()   <!-- ✅ This is mandatory -->
            </main>
        </div>
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>